# GOH Environment Configuration
# Copy to .env and fill in values

# Application
GOH_ENV=development
GOH_DEBUG=true
GOH_SECRET_KEY=change-me-to-random-secret

# Database
GOH_DB_PATH=./goh.db

# JWT
GOH_JWT_SECRET=change-me-to-jwt-secret
GOH_JWT_ACCESS_EXPIRES_MINUTES=30
GOH_JWT_REFRESH_EXPIRES_DAYS=30

# Magic Link
GOH_MAGIC_LINK_EXPIRES_MINUTES=15
GOH_MAGIC_LINK_BASE_URL=http://localhost:5173

# OAuth - Google
GOH_GOOGLE_CLIENT_ID=
GOH_GOOGLE_CLIENT_SECRET=

# OAuth - Discord
GOH_DISCORD_CLIENT_ID=
GOH_DISCORD_CLIENT_SECRET=

# Server
GOH_HOST=0.0.0.0
GOH_PORT=5050

# Frontend URL (for CORS)
GOH_FRONTEND_URL=http://localhost:5173
